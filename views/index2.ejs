    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">
    <link href="./css/output.css" rel="stylesheet">
    <link rel="stylesheet" href="css/index.css">
    <style>
        nav {
            font-family: "Lexend", sans-serif;
        }

        .section {
            position: relative;
            user-select: none;
            cursor: pointer;
            overflow: hidden;
            padding: 10px 15px;
            border-radius: 30px;
            z-index: 0;
        }

        .section::after {
            position: absolute;
            content: "";
            top: 100%;
            left: 0;
            width: 100%;
            height: 100%;
            background: #7D105B;
            border-radius: 50%;
            transition: all 0.3s ease-in;
            z-index: -1;
        }

        .section:hover::after {
            top: 0;
            border-radius: 0;
        }

        .section:hover a {
            color: black;
            position: relative;
            z-index: 1;
        }
    </style>

</head>

<body>
    <div class="main-container">
        <nav class="bg-[#35012B] flex justify-between items-center px-[20vw] text-white">
            <div class="contact flex items-center gap-[clamp(10px,3.5vw,10rem)]">
                <div class="mobile">
                    <i class="fa-solid fa-phone mr-1"></i> 878-9671-4455
                </div>
                <div class="address">
                    <i class="fa-solid fa-location-dot mr-1"></i>Sector 25, Chandigarh
                </div>
            </div>
            <div class="social-media">
                <a href=""><i class="fa-brands fa-facebook"></i></a>
                <a href=""><i class="fa-brands fa-twitter"></i></a>
                <a href=""><i class="fa-brands fa-instagram"></i></a>
                <a href=""><i class="fa-brands fa-linkedin"></i></a>
                <a href=""><i class="fa-brands fa-google-plus-g"></i></a>
            </div>
            <div class="button flex gap-[clamp(10px,3vw,10rem)]">
                <div class="login cursor-pointer">
                    <i class="fa-solid fa-user"></i> Login
                </div>
                <div class="register cursor-pointer">
                    Register
                </div>
            </div>
        </nav>
        <nav class="bg-[black] flex justify-between py-9 px-[15vw] text-white items-center lower">
            <div class="logo "><img
                    src="https://motors.stylemixthemes.com/rent-a-car/wp-content/uploads/sites/7/2017/01/motors_car_rental_logo.svg"
                    alt="Logo"></div>
            <div class="sections flex gap-[5px]">
                <div class="home section"><a href="#index">Home</a></div>
                <div class="AboutUs section"><a href="#">About Us</a></div>
                <div class="Rentable section"><a href="#">Rentable</a></div>
                <div class="Renting section"><a href="#">Rent</a></div>
                <div class="contact section"><a href="#">Contact Us</a></div>
            </div>

            <div class="number">
                <i class="fa-solid fa-phone bg-[#7D105B] mr-2 rounded-full p-3 text-[black]"></i>878-9671-4455
            </div>
        </nav>
    </div>
</body>
